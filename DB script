/****** Object:  Table [dbo].[Course] ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE TABLE [dbo].[Course](
	[cs_id] [int] IDENTITY(1,1) NOT NULL,
	[cs_title] [varchar](50) NULL,
	[cs_duration] [varchar](50) NULL,
	[cs_institute] [varchar](50) NULL,
	[cs_content] [varchar](1000) NULL,
	[cs_level] [varchar](50) NULL,
	[cs_language] [varchar](50) NULL,
	[cs_skills] [varchar](1000) NULL,
	[cs_description] [varchar](1000) NULL,
	[cs_type_id] [int] NULL,
	[is_active] [int] NULL,
 CONSTRAINT [PK_Course] PRIMARY KEY CLUSTERED 
(
	[cs_id] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO
